<% include ../partials/header %>
<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>House Information</h1>
    <div class="show2">
  <a href="/house/<%=house.id%>">
    <img src="<%=house.image%>" ><br>
  </a>
    </div>
    <h4>Type: <%=house.type; %></h4>
      <h4>Price: <%=house.price; %></h4>
        <h4>Size(sqft): <%=house.size; %></h4>
        <h4>Location: <%=house.location; %></h4>
          <h4>Quantity: <%=house.qty; %></h4>
        <form action="/house/<%=house.id; %>?_method=DELETE" method="POST">
              <input type="submit" value="DELETE" />
            </form>
            <% if (house.qty <= 0) { %>
            <h4 class="out-of-stock"> Booked </h4>
          <% } else   { %>
          <h6>Available</h6>
          <form action="/house/<%=house.id%>/buy?_method=put" method="POST">
            <button class="buy-button">Book</button>
          </form>
           <% } %>
            <a class="btn btn-success" href="/house/<%=house.id; %>/edit">Edit</a><br>
            <a class="btn btn-success" href="/house">Back</a><br>

  </body>
</html>

<% include ../partials/footer %>
